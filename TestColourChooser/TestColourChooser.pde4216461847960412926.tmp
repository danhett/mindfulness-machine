
color[] colours = new color[11]; 
int[] colourCounts = new int[11]; 
int totalPenCount = 0; 


void setup () { 

  size(800, 800); 

  colours[0] = #FF4DD6; // pink
  colours[1] = #DE2B30;   // red
  colours[2] = #A05C2F;// light brown
  colours[3] = #744627;  // dark brown
  colours[4] = #266238; // dark green 
  colours[5] = #49AF55; // light green 
  colours[6] = #FFE72E ; // yellow
  colours[7] = #FF8B17 ; // orange
  colours[8] = #6722B2 ; // purple
  colours[9] = #293FB2 ; // navy blue
  colours[10] = #6FC6FF ; // sky blue

  noSmooth();

  noLoop();
}


void draw() { 
  background(250);
  int startColour = 0; 
  noSmooth();
  float y = 10; 
  strokeWeight(7); 
  strokeCap(SQUARE);
  while (totalPenCount <132*2) { 
    strokeWeight(10); 
    int[] chosencolours = new int[7]; 
    for (int i = 0; i<7; i++) { 
      int colourindex = (startColour+(i))%11;    
      colourCounts[colourindex]++; 
      totalPenCount++; 


      chosencolours[i] = colourindex; 
      stroke(colours[colourindex]); 
      float x = (colourindex*15)+10;
      line(x, y, x, y+10);
    }
    chosencolours = sort(chosencolours); 
    strokeWeight(21); 

    for (int i = 0; i<7; i++) { 
      float x = (i*28)+200;
      strokeWeight(25); 
      stroke(0);
      line(x, y-2, x, y+17);
      strokeWeight(21); 
      stroke(colours[chosencolours[i]]);

      line(x, y, x, y+15);
    }

    startColour++; 
    y+= 20;
  }

  println("total pens used : ", totalPenCount);
  for (int i =0; i<11; i++) { 
    println("colour "+i+" : "+colourCounts[i]);
  }
}